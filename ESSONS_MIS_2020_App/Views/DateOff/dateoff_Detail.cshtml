@model IEnumerable<ESSONS_MIS_2020_App.Models.DateOffModel>
@{
    ViewData["Title"] = "dateoff_Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin nghỉ phép chi tiết</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Mã nghỉ</th>
                                    <th>Mã nhân viên</th>
                                    <th>Loại phép</th>
                                    <th>Từ ngày</th>
                                    <th>Đến ngày</th>
                                    <th>Từ giờ</th>
                                    <th>Đến giờ</th>
                                    <th>Số giờ</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffID)</td>
                                        <td>@Html.DisplayFor(modelItem => item.empID)</td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffType)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.dateoffStart)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffEnd)</td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffStartTime)</td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffEndTime)</td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffNumber)</td>
                                        @if (item.status == 1)
                                        {
                                            <td>Đã xác nhận</td>
                                        }
                                        @if (item.status == 4)
                                        {
                                            <td>
                                                @Html.ActionLink("Bổ sung giấy", "dateoff_UpdatePaper", "dateoff", new { dateoffID = item.dateoffID },
                                                                                                   new
                                                                                                   {
                                                                                                       @class = "btn btn-info btn-sm"
                                                                                                   })
                                            </td>
                                        }
                                    </tr>
                                }
                        </table>
                    </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>

@section scripts{
    <script type="text/javascript">
       
        $.fn.dataTable.ext.errMode = 'throw';

        $('#example1').dataTable({
            "aaSorting": [],
            // Your other options here...
        });
    </script>
}
