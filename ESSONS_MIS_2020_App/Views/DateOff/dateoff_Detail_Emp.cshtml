@model IEnumerable<ESSONS_MIS_2020_App.Models.DateOffModel>

@{
    ViewData["Title"] = "dateoff_Detail_Emp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin nghỉ phép chi tiết</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table">
                            <tr>
                                <td style="width: 480px">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Số thẻ</label>
                                        <label class="col-sm-3 col-form-label">1</label>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Họ tên</label>
                                        <label class="col-sm-5 col-form-label">Lê Hoài Nam</label>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Tổng phép năm</label>
                                        <label class="col-sm-3 col-form-label">12</label>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Đã dùng phép năm</label>
                                        <label class="col-sm-3 col-form-label">2</label>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Phép VR</label>
                                        <label class="col-sm-3 col-form-label">10</label>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Không phép</label>
                                        <label class="col-sm-3 col-form-label">10</label>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Nghỉ BHXH</label>
                                        <label class="col-sm-3 col-form-label">10</label>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <br />
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Mã nghỉ</th>
                                    <th>Loại phép</th>
                                    <th>Từ ngày</th>
                                    <th>Đến ngày</th>
                                    <th>Từ giờ</th>
                                    <th>Đến giờ</th>
                                    <th>Số giờ</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffID)</td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffType)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.dateoffStart)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffEnd)</td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffStartTime)</td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffEndTime)</td>
                                        <td>@Html.DisplayFor(modelItem => item.dateoffNumber)</td>
                                        <td>
                                            <a class="btn btn-danger btn-sm" href="#">
                                                <i class="fas fa-trash">
                                                </i>
                                                Huỷ
                                            </a>
                                        </td>
                                    </tr>
                                }
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>

