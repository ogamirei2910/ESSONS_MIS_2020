@model ESSONS_MIS_2020_App.Models.EmpModel
@{
    ViewData["Title"] = "emp_Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thêm mới nhân viên</h3>
                    </div>
                    <!-- /.card-header -->
                    <form method="post" asp-action="emp_Create" enctype="multipart/form-data">
                        <table class="table">
                            <tr>
                                <td width="50%">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Số thẻ</label>
                                        <div class="col-3">
                                            <input asp-for="empID" type="text" maxlength="6" class="form-control" placeholder="Số thẻ" value="">
                                        </div>
                                        <div class="col-3">
                                            <input asp-for="empIDTemp" type="text" maxlength="10" class="form-control" placeholder="Số thời vụ" value="">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Họ tên</label>
                                        <div class="col-5">
                                            <input asp-for="empName" maxlength="30" type="text" class="form-control" placeholder="Họ tên" value="">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Điện Thoại</label>
                                        <div class="col-4">
                                            <input asp-for="empTel" maxlength="15" type="text" class="form-control" placeholder="Số điện thoại" value="">
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Giới tính</label>
                                        <label>&nbsp;</label>
                                        <select asp-for="empSex" class="custom-select col-sm-3">
                                            <option>Nam</option>
                                            <option>Nữ</option>
                                        </select>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Ngày sinh</label>
                                        <div class="col-5">
                                            <div class="datepicker date input-group p-0 shadow-sm">
                                                <input asp-for="empBirthDay" type="text" class="form-control" id="reservationDate">
                                                <div class="input-group-append"><span class="input-group-text"></span></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Nhóm B.phận</label>
                                        <select asp-for="depID" class="custom-select col-sm-4">
                                        </select>
                                    </div>
                                    @*asp-items="@(new SelectList(ViewBag.departmentList,"depID","depName"))"*@
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Bộ phận</label>
                                        <select asp-for="depID" class="custom-select col-sm-4">
                                        </select>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Chức vụ</label>
                                        <select asp-for="positionID" class="custom-select col-sm-4">
                                        </select>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Dân tộc</label>
                                        <div class="col-3">
                                            <input asp-for="empAddress" maxlength="20" class="form-control" type="text" placeholder="Tạm trú" value="">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Tôn giáo</label>
                                        <div class="col-3">
                                            <input asp-for="empAddressTemp" maxlength="20" class="form-control" type="text" placeholder="Tạm trú" value="">
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Nơi sinh</label>
                                        <select asp-for="depID" class="custom-select col-sm-4">
                                        </select>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Nguyên quán</label>
                                        <select asp-for="depID" class="custom-select col-sm-4">
                                        </select>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Thường trú</label>
                                        <div class="col-8">
                                            <input asp-for="empAddress" maxlength="100" class="form-control" type="text" placeholder="Thường trú" value="">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Tạm trú</label>
                                        <div class="col-8">
                                            <input asp-for="empAddressTemp" maxlength="100" class="form-control" type="text" placeholder="Tạm trú" value="">
                                        </div>
                                    </div>
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">CMND/Căn cước</label>
                                        <div class="col-3">
                                            <input asp-for="empIdentityCard" type="text" maxlength="12" class="form-control" placeholder="CMND" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Nơi cấp</label>
                                        <div class="col-3">
                                            <input asp-for="empIdentityPlace" type="text" maxlength="12" class="form-control" placeholder="Nơi cấp" value="">
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Ngày cấp</label>
                                        <div class="col-3">
                                            <input asp-for="empIdentityDate" type="text" maxlength="12" class="form-control" placeholder="Ngày cấp" value="">
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group row">
