                                        <label class="col-sm-3 col-form-label">Trình độ</label>
                                        <div class="col-3">
                                            <input asp-for="empEdu" maxlength="30" type="text" class="form-control" placeholder="Trình độ" value="">
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Trình độ tin học</label>
                                        <div class="col-3">
                                            <input asp-for="empAddressTemp" maxlength="20" class="form-control" type="text" placeholder="Tạm trú" value="">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Trình độ ngoại ngữ</label>
                                        <div class="col-3">
                                            <input asp-for="empAddressTemp" maxlength="20" class="form-control" type="text" placeholder="Tạm trú" value="">
                                        </div>
                                    </div>
                                </td>
                            </tr>
                           <tr>
                               <td>
                                   <div class="form-group row">
                                       <label class="col-sm-3 col-form-label">Hôn nhân</label>
