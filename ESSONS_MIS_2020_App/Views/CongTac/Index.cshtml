
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh sách yêu cầu công tác</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Mã công tác</th>
                                    <th>Bộ phận</th>
                                    <th>Tên kế hoạch</th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Trạng thái</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.requestList)
                                {
                                <tr>
                                    <td>@item.congtacID</td>
                                    <td>@item.depName</td>
                                    <td>@item.planName</td>
                                    <td>@item.planStart</td>
                                    <td>@item.planEnd</td>
                                    <td>
                                        @if (@item.status == 2)
                                        {
                                            <label>Đang chờ</label>
                                        }
                                        else
                                        {
                                            if (@item.status == 1)
                                            {
                                                <label>Đã xác nhận</label>
                                            }
                                            if (@item.status == 3)
                                            {
                                                <label>Hủy</label>
                                            }
                                            if (item.status == 4)
                                            {
                                                <label>Hoàn thành</label>
                                            }
                                        }

                                    </td>
                                    <td>
                                        @Html.ActionLink("Chi tiết", "Detail", "CongTac", new { congtacID = item.congtacID, page = 1 },
                                                                                          new { @class = "btn btn-primary btn-sm" })

                                        @if (item.status == 1)
                                        {
                                            @Html.ActionLink("Hoàn thành", "Update", "CongTac", new { congtacID = item.congtacID, status = 4, page = 1 },
                                                                                            new { @class = "btn btn-info btn-sm" })
                                            @Html.ActionLink("Hủy", "Delete", "CongTac", new { congtacID = item.congtacID, status = 3, page = 1 },
                                                                                              new
                                                                                              {
                                                                                                  @class = "btn btn-danger btn-sm"
                                                                                              })
                                        }
                                        else
                                        {
                                            @if (@item.status == 2)
                                            {
                                                @Html.ActionLink("Hủy", "Delete", "CongTac", new { congtacID = item.congtacID, status = 3, page = 1 },
                                                                                                  new
                                                                                                  {
                                                                                                      @class = "btn btn-danger btn-sm"
                                                                                                  })
                                            }
                                        }
                                        </td>
                                </tr>
                                }
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

